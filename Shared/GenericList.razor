@typeparam TItem

@if (ListOfItems == null)
{
    @if (NullList != null)
    {
        <tr>@NullList</tr>
    }
    else
    {
        <img src="https://miro.medium.com/max/1400/1*CsJ05WEGfunYMLGfsT2sXA.gif" height="200" />
    }
}
else if (ListOfItems.Count == 0)
{
    @if (EmptyList != null)
    {
        <tr>@EmptyList</tr>
    }
    else
    {
        <img src="https://miro.medium.com/max/1400/1*CsJ05WEGfunYMLGfsT2sXA.gif" height="200" />
    }
}
else
{
    @foreach (var item in ListOfItems)
    {
        @ItemTemplate(item)        
    }
}

@code {

    [Parameter]
    public RenderFragment NullList { get; set; }
    
    [Parameter]
    public RenderFragment EmptyList { get; set; }

    [Parameter]
    public RenderFragment<TItem> ItemTemplate { get; set; }

    [Parameter]
    public List<TItem> ListOfItems { get; set; }

}
